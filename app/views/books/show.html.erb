<div class="container px-5 px-sm-0">
    <div class="row">
    <%= render 'users/user', user:@user, new_book:@new_book %>
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <td><%= attachment_image_tag @book.user, :profile_image, size:"40x40", format: 'jpeg', fallback: "no_image.jpg" %><br/>
                        <%= link_to @book.user.name, user_path(@book.user.id) %></td>
                        <td><%= link_to @book.title, book_path %></td>
                        <td><%= @book.body %></td>
                        <td><% if @book.user == current_user %>
                        <%= link_to "Edit", edit_book_path(@book) %>
                        <%= link_to "Destroy", book_path(@book), method: :delete %>
                        <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


